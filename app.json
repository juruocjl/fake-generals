{
    "apps": [
        {
            "name": "generals",
            "cwd": ".",
            "script": "main.js",
            "watch": true,
            "ignore_watch": [
                "node_modules",
                "replay",
                "logs"
            ],
            "error_file": "./logs/app-err.log",
            "out_file": "./logs/app-out.log",
            "merge_logs": true,
            "log_date_format": "YYYY-MM-DD HH:mm:ss",
            "min_uptime": "60s",
            "max_restarts": 30,
            "restart_delay": 60,
            "env": {
                "NODE_ENV": "production"
            },
        }
    ],
    "deploy" : {
        "production" : {
            "user" : "root",
            "host" : "120.48.129.231",
            "ref"  : "origin/master",
            "repo" : "git@github.com:juruocjl/fake-generals.git",
            "path" : "/root/",
            "post-deploy" : "npm install && pm2 startOrRestart app.json --env production"
        }
    }
}
